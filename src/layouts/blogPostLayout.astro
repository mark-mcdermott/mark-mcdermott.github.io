---
import Layout from "./layout.astro";
import Header from "@/components/header.astro";
import FooterLink from "@/components/footerLink.astro";
---

<Layout bodyMaxWidth="max-w-7xl">
  <slot name="header">
    <Header />
  </slot>

  <slot />

  <footer class="mt-12">
    <FooterLink />
  </footer>
</Layout>

<style>
  footer {  
    display: flex;
    flex-flow: column wrap;
    align-content: flex-end;
  }
</style>